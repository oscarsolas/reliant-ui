a(:href="to" v-on:mouseover="hover" v-on:mouseout="out").reliant-button
	div(ref="button_wrapper").reliant-button_wrapper
		//- content
		slot

		//- shape
		svg(xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none").slick
			path(d="M 0 36 L 0 0 L 20 0 A 0 10 0 1 1 20 36 Z" ref="lineTop")

		//- arrow
		div(ref="arrow").arrow
			span(ref="arrow_top").arrow_top
			span(ref="arrow_bottom").arrow_bottom

		//- circle
		div(ref="circle" style="transform: scale(0)").circle